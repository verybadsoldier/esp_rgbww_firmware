{
    "name": "two roms, two lfs partitions",
    "comment": "Should work with any Esp32 variant",
	"arch": "Esp32",
	"bootloader_size": "0x8000",
	"partition_table_offset": "0x8000",
	"devices": {
		"spiFlash": {
			"type": "flash",
			"size": "4M",
			"mode": "dio",
			"speed": "60 if SMING_SOC=='esp32c2' else 40"
		}
	},
    "options": [
        "4m"
    ],
	"partitions": {
		"phy_init": {
			"address": "0x00f000",
			"size": "0x1000",
			"type": "data",
			"subtype": "phy"
		},
		"nvs": {
			"address": "0x009000",
			"size": "0x6000",
			"type": "data",
			"subtype": "nvs"
		},
        "rom0": {
            "device": "spiFlash",
            "address": "0x010000",
            "size": "1408K",
            "type": "app",
            "subtype": "ota_0",
            "readonly": false,
            "encrypted": false,
            "filename": "$(TARGET_BIN)"

        },
        "lfs0": {
            "device": "spiFlash",
            "address": "0x00170000",
            "size": "576K",
            "type": "data",
            "subtype": "littlefs",
            "readonly": false,
            "encrypted": false,
            "filename": ""
        },
        "rom1": {
            "device": "spiFlash",
            "address": "0x00200000",
            "size": "1472K",
            "type": "app",
            "subtype": "ota_1",
            "readonly": false,
            "encrypted": false,
            "filename": ""
        },
        "otadata": {
            "device": "spiFlash",
            "address": "0x0037e000",
            "size": "8K",
            "type": "data",
            "subtype": "ota",
            "readonly": false,
            "encrypted": false,
            "filename": ""
        },
        "lfs1": {
            "device": "spiFlash",
            "address": "0x00380000",
            "size": "512K",
            "type": "data",
            "subtype": "littlefs",
            "readonly": false,
            "encrypted": false,
            "filename": ""
        }
    }
}
